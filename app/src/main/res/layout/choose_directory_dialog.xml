<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


   <TextView
        android:text="Select Storage"
       android:background="@color/colorTxt1"
        android:gravity="center"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:layout_marginTop="23dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/btn_phone_storage"
        android:layout_width="match_parent"
        android:text="Phone"
        android:textAlignment="viewStart"
        android:drawablePadding="30dp"
        android:drawableLeft="@drawable/ic_phone_48"
        android:layout_height="wrap_content"/>


    <Button

        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/btn_sd_card"
        android:layout_width="match_parent"
        android:text="SD CARD"
        android:textAlignment="viewStart"
        android:drawablePadding="30dp"
        android:drawableLeft="@drawable/ic_sd_card_48"
        android:layout_height="wrap_content"/>



</LinearLayout>